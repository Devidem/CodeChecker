<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Parallel Promo Checking" group-by-instances="true" parallel="instances" thread-count="2">

<!--    Входные параметры запуска кейса -->
    <parameter name="inputType" value="file"/>
    <parameter name="browserName" value="chrome"/>

    <test verbose="2" preserve-order="true" name="ProductPromoCheckingMulti">

        <groups>
            <run>
                <include name="multi"/>
            </run>
        </groups>

        <classes>
            <class name="tests.citilink.testngAllure.PromCheckingMulti"/>
            <class name="tests.citilink.testngAllure.supprotClasses.promChecking.multi.FactoryPromCheckingMulti"/>
        </classes>

    </test>
</suite>