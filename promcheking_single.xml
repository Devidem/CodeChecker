<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Single Promo Checking" group-by-instances="true">

<!--    Входные параметры запуска кейса -->
    <parameter name="inputType" value="file"/>
    <parameter name="browserName" value="chrome"/>


    <test verbose="2" preserve-order="true" name="ProductPromoChecking">

        <groups>
            <run>
                <include name="factory"/>
            </run>
        </groups>

        <classes>
            <class name="tests.citilink.testngAllure.PromChecking"/>
            <class name="tests.citilink.testngAllure.supprotClasses.promChecking.FactoryPromChecking"/>
        </classes>

    </test>
</suite>