<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Parallel Promo Checking" group-by-instances="true" parallel="instances" thread-count="2" >

    <!--    Входные параметры запуска кейса -->
    <parameter name="inputType" value="file"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="siteName" value="citilink"/>

    <test verbose="2" preserve-order="true" name="ProductPromoChecking">

        <groups>
            <run>
                <include name="provider"/>
            </run>
        </groups>

        <classes>
            <class name="tests.citilink.testngAllure.PromCheckingSingleProvider"/>
        </classes>

    </test>

    <test verbose="2" preserve-order="true" name="ProductPromoCheckingMulti">

        <groups>
            <run>
                <include name="multi"/>
            </run>
        </groups>

        <classes>
            <class name="tests.citilink.testngAllure.PromCheckingMultiFactory"/>
            <class name="tests.citilink.testngAllure.supprotClasses.promChecking.FactoryPromCheckingMulti"/>
        </classes>

    </test>


</suite>